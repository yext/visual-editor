{
  "compilerOptions": {
    "target": "ESNext",
    "strict": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "global.d.ts", "theme.config.ts"]
}
