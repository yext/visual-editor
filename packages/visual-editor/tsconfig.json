{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "types": ["vite/client", "node"],
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@yext/visual-editor": ["./src/index.ts"]
    }
  },
  "include": [
    "src",
    "index.d.ts",
    ".eslintrc.json",
    "src/components/testing/componentTests.d.ts"
  ],
  "exclude": ["node_modules", "src/vite-plugin/templates/*"]
}
