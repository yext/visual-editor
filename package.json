{
  "name": "@yext/visual-editor",
  "description": "Component library for Yext Pages Visual Editor",
  "version": "0.0.0",
  "type": "module",
  "author": "sumo@yext.com",
  "types": "dist/yext.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "test": "vitest run",
    "prettier": "prettier --write --cache .",
    "lint": "eslint --cache --fix src/ scripts/",
    "autofix": "pnpm run lint && npm prun prettier",
    "ci-publish": "tsx scripts/publishCI.ts",
    "release": "tsx scripts/release.ts",
    "prepare": "husky && pnpm build",
    "generate-notices": "generate-license-file"
  },
  "dependencies": {
    "@yext/eslint-config": "^1.0.0",
    "eslint": "^9.8.0",
    "eslint-plugin-react": "^7.35.0",
    "package.json": "^2.0.1",
    "picocolors": "^1.0.1",
    "prettier": "^3.3.3",
    "prompts": "^2.4.2",
    "tsx": "^4.16.3"
  },
  "engines": {
    "node": "^17 || ^18 || ^20"
  },
  "packageManager": "pnpm@8.6.8",
  "lint-staged": {
    "*": "prettier --write --cache --ignore-unknown",
    "*.{ts,js,tsx,jsx}": "eslint --cache --fix"
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.1",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.8.0",
    "@types/fs-extra": "^11.0.4",
    "@types/minimist": "^1.2.5",
