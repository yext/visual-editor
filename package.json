    "@types/react-dom": "^18.3.0",
    "@types/semver": "^7.5.8",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint-plugin-require-extensions": "^0.1.3",
    "execa": "^8.0.1",
    "fs-extra": "^11.2.0",
    "generate-license-file": "^3.5.0",
    "globals": "^15.8.0",
    "jsdom": "^24.1.1",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.7",
    "minimist": "^1.2.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "semver": "^7.6.3",
    "tsup": "^8.2.3",
    "typescript": "^5.5.4",
    "vite": "^5.3.5",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^2.0.5"
  }
